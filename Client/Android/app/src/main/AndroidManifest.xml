<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.slack.joiple.a2018_busan_ict_hackerton_android">

    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Initial">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".QrReader" />
        <activity android:name=".NfcTagging" />
        <activity android:name=".AttendanceView" />
        <activity android:name=".CompanyChanger" />
        <activity android:name=".Option" />
        <activity android:name=".Profile" />
        <activity android:name=".SignIn" />
        <activity android:name=".SignUp" />
        <activity android:name=".CompanyAdder" />
        <activity android:name=".CompanyProfile" />

        <service
            android:name=".NfcService"
            android:exported="true"
            android:permission="android.permission.Bind_NFC_SERVICE">
            <intent-filter>
                <action android:name="android.intent.action.HOST_APDU_SERVICE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.nfc.cardemulation.host_apdu_service"
                android:resource="@xml/aid_list" />
        </service>

        <activity
            android:name=".MainActivityDrawer"
            android:label="@string/title_activity_main_drawer"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".CarrierActivityDrawer"
            android:label="@string/title_activity_carrier_drawer"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".WageActivityDrawer"
            android:label="@string/title_activity_wage_drawer"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ProfileActivityDrawer"
            android:label="@string/title_activity_profile_drawer"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>